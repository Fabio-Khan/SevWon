<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pandamonium.sevenw" >

    <!-- icon e logo sono per rappresentare l'app. -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:logo="@mipmap/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".New_Game.Expansions_Selection.ExpansionSelection"
            android:label="@string/Expansions_Select">
        </activity>

        <activity
            android:name=".New_Game.Players_Selection.ChosePlayers"
            android:label="@string/Chose_Players">
        </activity>

        <activity
            android:name=".New_Game.Game_Match.Match_Activity"
            android:label="@string/Match">
        </activity>

        <activity
            android:name=".New_Game.Game_Match.Match_Score"
            android:label="@string/Match_Score">
        </activity>

        <activity
            android:name=".Players.Main_Players"
            android:label="@string/Main_Player">
        </activity>

        <activity
            android:name=".Statistics.Main_Statistics"
            android:label="@string/Statistics_Main">
        </activity>

        <activity
            android:name=".Storico.StoricoPartite"
            android:label="@string/Storico">
        </activity>

        <activity
            android:name=".Storico.Display_Match"
            android:label="@string/Storico_Disp">
        </activity>

    </application>

</manifest>
