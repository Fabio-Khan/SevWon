<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_little"
    >

    <ImageView
        android:id="@+id/stat_top"
        android:layout_width="@dimen/img_side"
        android:layout_height="@dimen/img_side"
        />

    <TextView
        android:id="@+id/stat_top_score"
        android:layout_width="0dp"
        android:layout_height="@dimen/img_side"
        android:textColor="@color/white"
        android:textSize="@dimen/textmed"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/stat_top_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/img_side"
        android:textColor="@color/white"
        android:textSize="@dimen/textmed"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/stat_top_date"
        android:layout_width="0dp"
        android:layout_height="@dimen/img_side"
        android:textColor="@color/white"
        android:textSize="@dimen/textnorm"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="2"/>

</LinearLayout>